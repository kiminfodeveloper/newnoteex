{
    "manifest_version": 3,
    "name": "Bloco de Notas Pro",
    "version": "1.1.0",
    "description": "Bloco de notas premium para produtividade diária com múltiplas notas, temas e busca.",
    "permissions": ["storage", "tabs"],
    "action": {
        "default_popup": "src/popup.html",
        "default_title": "Bloco de Notas Pro",
        "default_icon": {
            "16": "src/assets/icons/icon16.svg",
            "48": "src/assets/icons/icon48.svg",
            "128": "src/assets/icons/icon128.svg"
        }
    },
    "icons": {
        "16": "src/assets/icons/icon16.svg",
        "48": "src/assets/icons/icon48.svg",
        "128": "src/assets/icons/icon128.svg"
    },
    "web_accessible_resources": [
        {
            "resources": ["src/js/*.js", "src/css/*.css"],
            "matches": ["<all_urls>"]
        }
    ],
    "commands": {}
}
